<div class="row">
  <div class="profile-detail col-5">
    <div class="profile-image">
      <% if @user.user_image? %>
        <%= image_tag(@user.user_image.url, class: "profile-image") %>
      <% else %>
        <%= image_tag("user_default.png", class: "profile-image") %>
      <% end %>
    </div>
    <div class="user-detail">
      <p class="txt-m"><%= @user.name %></p>
      <p>年齢：<%= user_age %> 歳</p>
      <p>性別：<%= @user.gender %></p>
      <div id="follow_buttons_<%= @user.id %>"><%= render "relationships/follow_button", user: @user %></div>
    </div>
  </div>
  <div class="introduction col-7">
    <p><%= simple_format(@user.introduction) %></p>
  </div>
</div>
<div class="user-page-bar mt-5 mb-3">
  <ul class="nav">
    <li><%= link_to "レビュー一覧", user_path(@user), class: "nav-link #{'page-active' if current_page?(user_path(@user))}" %><span class="ml-2 badge badge-secondary"><%= @count_books %></span></li>
    <li><%= link_to "お気に入りのレビュー", favorites_user_path(@user), class: "nav-link #{'page-active' if current_page?(favorites_user_path(@user))}" %></li>
    <li><%= link_to "本棚", bookcases_user_path(@user), class: "nav-link #{'page-active' if current_page?(bookcases_user_path(@user))}" %><span class="ml-2 badge badge-secondary"><%= @count_books %></span></li>
    <li><%= link_to "フォロワー (#{@user.followings.count})", followings_user_path(@user), class: "nav-link #{'page-active' if current_page?(followings_user_path(@user))}" %></li>
    <li><%= link_to "フォロー", followers_user_path(@user), class: "nav-link #{'page-active' if current_page?(followers_user_path(@user))}" %></li>
  </ul>
</div>

<div class="book_review_boxs">
  <% @reviews.each do |review| %>
    <%= render "partial/book_review", review: review %>
  <% end %>
</div>

