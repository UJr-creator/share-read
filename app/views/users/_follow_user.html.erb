<div class="container mt-5 mb-5">
  <div class="offset-md-1 col-md-10">
    <% users.each do |user| %>
      <div class="follow-user flex mt-2">
        <div>
          <% if user.user_image? %>
            <%= link_to (image_tag user.user_image.url, class: "user-image-l"), user_path(user) %>
          <% else %>
            <%= link_to (image_tag "user_default.png", class: "user-image-l"), user_path(user) %>
          <% end %>
        </div>
        <div class="pl-2">
          <div class="flex-between">
            <%= link_to user.name, user_path(user), class: "txt-xs mb-1" %>
            <div id="follow_buttons_<%= user.id %>"><%= render "relationships/follow_button", user: user %></div>
          </div>
          <div class="flex">
            <div class="follow-user-info">
              <p class="txt-xxs m-0"><%= user.gender %></p>
              <p class="txt-xxs m-0"><%= user_age %>æ­³</p>
            </div>
            <p class="pl-3 pr-3 pt-2"><%= (user.introduction).truncate(45) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>