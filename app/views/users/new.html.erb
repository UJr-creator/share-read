<div class="text-center">
  <p class="txt-xl headline mb-5 mt-5">会員登録</p>
</div>

<div class="row">                                                                           
  <div class="offset-sm-2 col-sm-8">
    <%= form_with(model: @user, local:true) do |f| %>
    <%= render 'partial/error_messages', model: f.object %>
      <div class="form-item flex">
        <%= f.label :name, "名前", class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
      </div>
      <div class="form-item flex">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>
      <div class="form-item flex">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, class: "form-input" %>
      </div>
      <div class="form-item flex">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>
      <div class="text-center mt-5">
        <%= f.submit '新規登録', class: 'new-btn submit-btn' %>
      </div>
    <% end %>
  </div>
</div>