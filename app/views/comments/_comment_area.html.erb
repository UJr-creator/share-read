<% @comments.each do |comment| %>
  <div class="review-bg mb-3">
    <div class="flex-between">
      <div class="comment-user">
        <!-- ユーザーの画像 -->
        <div>
          <% if comment.user.user_image? %>
            <a href="<%= user_url(comment.user.id) %>"><%= image_tag comment.user.user_image.url, class: "user-image" %></a>
          <% else %>
            <a href="<%= user_url(comment.user.id) %>"><%= image_tag "user_default", class: "user-image" %></a>
          <% end %>      
        </div>
        <!-- ユーザー名 -->
        <div class="comment-user-name">
          <%= link_to comment.user.name, user_path(comment.user), class: "txt-s" %>
        </div>
      </div>
      <div class="edit-delete">
        <% if current_user == comment.user %>
          <%= link_to edit_book_review_comment_path(comment.review.book, comment.review, comment), class: 'btn btn-info' do %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to [comment.review.book, comment.review, comment], method: :delete, remote: true, class: 'btn btn-danger' do  %>
            <i class="fas fa-trash"></i>
          <% end %>
        <% end %>  
      </div>
    </div>
    <!-- コメント -->
    <div class="comment">
      <p><%= simple_format(comment.content) %></p>      
    </div>
  </div>
<% end %>