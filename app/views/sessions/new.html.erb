<div class="text-center">
  <p class="txt-xl headline mb-5 mt-5">ログイン</p>
</div>

<div class="row">                                                                           
  <div class="offset-sm-2 col-sm-8">
    <%= form_with(url: login_path, scope: :session, local:true) do |f| %>
      <div class="form-item flex">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.text_field :email, class: "form-input" %>
      </div>
      <div class="form-item flex">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, class: "form-input" %>
      </div>
      <div class="flex login-submit mt-5">
        <div class="mr-2">
          <%= f.submit 'ログイン', class: 'submit-btn' %>
        </div>
          <%= link_to "ゲストログイン", guest_login_path, method: :post, class: "guest-btn" %>
      </div>
    <% end %>
  </div>
</div>