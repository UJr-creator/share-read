<% if logged_in? %>
  <div class="mb-5 topwrapper">
    <div class="toppage-message">
      <p class="txt-shadow txt-xxl">読んだ本をシェアしよう！</p>
    </div>
  </div>
  <div class="container">
    <div class="headline mb-5">
      <p class="txt-l mb-1"> 最近のレビュー</p>
      <p class="headline-bar"></p>
    </div>
    <div class="book_review_boxs">
      <% @reviews.first(4).each do |review| %>
        <%= render "partial/book_review", review: review %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="mb-5 topwrapper">
    <div class="toppage-message">
      <p class="txt-shadow txt-xxl">読んだ本をシェアしよう！</p>
    </div>
  </div>
  <div class="container">
    <div class="headline mb-5">
      <p class="txt-l mb-1"> 最近のレビュー</p>
      <p class="headline-bar"></p>
    </div>
    <div class="book_review_boxs">
      <% @reviews.first(4).each do |review| %>
        <%= render "partial/book_review", review: review %>
      <% end %>
    </div>
  </div>
<% end %>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

