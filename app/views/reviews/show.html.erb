<div class="review-detail mb-5 mt-5">
  <div class="review-detail-content row">
    <div class="col-10">
      <div class="review-detail-user">
        <div classs="mr-2"> 
          <% if @review.user.user_image? %>
            <%= link_to (image_tag @review.user.user_image.url, class: "user-image"), user_url(@review.user) %>
          <% else %>
            <%= link_to (image_tag "user_default.png", class: "user-image"), user_url(@review.user)  %>
          <% end %>
        </div>
        <div class="user-name">
          <p><%= @review.user.name %></p>
          <p><%= @review.updated_at %></p>
        </div>
      </div>
      <p><%= @review.book.title %></p>
      <p><%= simple_format(@review.content) %></p>
    </div>
    <div class="review-content-image col-2">
      <%= link_to (image_tag @review.book.image_url, class: "book-image"), book_url(@review.book) %>
    </div>
  </div>
  <div class="review-sub mt-2">
    <div class="reactions">
      <div class="favorite_buttons_<%= @review.id %>"><%= render "favorites/favorite_button", review: @review %></div>
      <p>コメント(<%= @review.comments.count %>)</p>
    </div>
    <div class="edit-delete">
      <% if current_user == @review.user %>
        <%= link_to edit_book_review_path(@review.book, @review), class: 'btn btn-info' do %>
          <i class="far fa-edit"></i>
        <% end %>
        <% if @review.published? %>
          <i class="fas fa-eye"></i>
        <% else %>
          <i class="fas fa-eye-slash"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% if @review.published? %>
　<%= render "comments/comment" %>
<% end %>