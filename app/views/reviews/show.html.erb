<div class="book_review_box">
  <div class="review-content row">
    <div class="review-content-detail col-10">
      <div class="review-content-user">
        <div classs="mr-2"> 
          <% if @review.user.user_image? %>
            <%= link_to (image_tag @review.user.user_image.url, class: "user-image"), user_url(@review.user) %>
          <% else %>
            <%= link_to (image_tag "user_default.png", class: "user-image"), user_url(@review.user)  %>
          <% end %>
        </div>
        <div class="user-name">
          <p><%= @review.user.name %></p>
          <p><%= @review.updated_at %></p>
        </div>
      </div>
      <p><%= @review.book.title %></p>
      <p><%= simple_format(@review.content) %></p>
    </div>
    <div class="review-content-image col-2">
      <%= link_to (image_tag @review.book.image_url, class: "book-image"), book_url(@review.book) %>
    </div>
  </div>
  <div class="reactions">
    <a>いいね</a>
    <a>コメント</a>
  </div>
</div>
<%= render "comments/comment"%>