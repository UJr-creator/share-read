<% if current_user.register?(@book) %>
  <%= form_with(model: current_user.bookcases.find_by(book_id: @book.isbn), method: :delete) do |f| %>
    <%= hidden_field_tag :book_id, @book.isbn %>
    <%= f.submit "本棚から取り出す", class: "register-submit-btn" %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.bookcases.build) do |f| %>
    <%= hidden_field_tag :book_id, @book.isbn %>
    <%= f.submit "本棚に登録", class: "unregister-submit-btn" %>
  <% end %>
<% end %>